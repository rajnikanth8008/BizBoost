<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_refer_bizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/baloo"
                            android:text="Refer"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_refer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name of Business"
                            android:layout_margin="@dimen/_5sdp"
                            android:textColorHint="@android:color/holo_blue_light"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_refer_name_of_bizz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif-monospace" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name of Referee"
                            android:layout_margin="@dimen/_5sdp"
                            android:textColorHint="@android:color/holo_blue_light"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_refer_name_of_referee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif-monospace" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/tv_relation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="serif-monospace"
                            android:background="@color/lightgray"
                            android:text="Relation"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="@dimen/_15sdp"
                            android:gravity="center|start"
                            android:paddingStart="@dimen/_6sdp"
                            android:drawableEnd="@drawable/ic_arrow_down"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Contact"
                            android:layout_margin="@dimen/_5sdp"
                            android:textColorHint="@android:color/holo_blue_light"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_refer_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif-monospace" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e-mail"
                            android:layout_margin="@dimen/_5sdp"
                            android:textColorHint="@android:color/holo_blue_light"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_refer_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif-monospace" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/chk_refer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Gift a smile"
                            android:textColor="@android:color/holo_blue_bright"
                            android:fontFamily="serif-monospace"
                            android:textSize="@dimen/_15sdp" />

                        <Button
                            android:id="@+id/bt_refer_submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/holo_blue_light"
                            android:text="Submit"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border_radius"
                            android:layout_margin="@dimen/_2sdp"
                            android:paddingRight="@dimen/_5sdp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>