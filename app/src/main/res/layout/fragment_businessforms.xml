<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bizz_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/baloo"
                            android:text="Payment Confirmation"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tv_bizz_payment"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="-"
                            android:layout_gravity="end"
                            android:textSize="@dimen/_25sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bizz_payment_pdf_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="serif-monospace"
                        android:text="ZapLabs"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_pdf"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bizz_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/baloo"
                            android:text="GST Invoice"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tv_bizz_gst"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="-"
                            android:layout_gravity="end"
                            android:textSize="@dimen/_25sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bizz_gst_pdf_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="serif-monospace"
                        android:text="ZapLabs"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_pdf"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>